{
    "name": "openpr",
    "displayName": "openpr",
    "description": "Open files helper",
    "version": "0.0.1",
    "publisher": "hollerith",
    "repository": {
        "type": "git",
        "url": "https://github.com/hollerith/openpr.git"
    },
    "engines": {
        "vscode": "^1.79.0"
    },
    "categories": [
        "Other"
    ],
    "icon": "icon.png",
    "activationEvents": [
        "onStartupFinished"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "extension.openPRFiles",
                "title": "Open all files in PR"
            },
            {
                "command": "extension.openStringLocation",
                "title": "Open String Location"
            }
        ],
        "configuration": {
            "title": "PR Files Opener",
            "properties": {
                "PRFilesOpener.githubToken": {
                    "type": "string",
                    "default": "",
                    "description": "The GitHub token for PR Files Opener"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/glob": "^8.0.0",
        "@types/mocha": "^10.0.1",
        "@types/node": "16.x",
        "@types/vscode": "^1.79.0",
        "@typescript-eslint/eslint-plugin": "^5.45.0",
        "@typescript-eslint/parser": "^5.45.0",
        "@vscode/test-electron": "^2.2.0",
        "eslint": "^8.28.0",
        "glob": "^8.0.3",
        "mocha": "^10.1.0",
        "typescript": "^4.9.3"
    },
    "dependencies": {
        "@octokit/rest": "^19.0.13",
        "node-fetch": "^3.3.1"
    }
}
